# Database (SQLite - just a file path)
DATABASE_URL=file:./data/tennis.db

# Cron job protection
CRON_SECRET=cron-secret

# Telegram Bot
TELEGRAM_BOT_TOKEN=123456:ABC-xxxxx

# Email (Gmail with app password, or any SMTP provider)
# To create Gmail app password: Google Account > Security > 2FA > App passwords
GMAIL_USER=your@gmail.com
GMAIL_APP_PASSWORD=your-app-password
# Optional SMTP config (defaults to Gmail SSL on port 465)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=465  # Use 587 for TLS, 465 for SSL

# App URL (for links in notifications)
NEXT_PUBLIC_APP_URL=http://localhost:3000
AUTH_SECRET=some-random-string